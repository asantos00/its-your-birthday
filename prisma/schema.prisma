// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  platform = ["debian-openssl-1.1.x", "native"]
}

model Contributor {
  id            Int       @default(autoincrement()) @id
  email         String
  name          String
  hasPaid       Boolean   @default(false)
  Birthday      Birthday? @relation(fields: [birthdayId], references: [id])
  birthdayId    String?
  suggestedGifs Gift[]    @relation("giftSuggestor")
  upvotes       Gift[]    @relation("upvotedBy")
  createdAt     DateTime  @default(now())
}

model Gift {
  id          Int           @default(autoincrement()) @id
  Birthday    Birthday?     @relation(fields: [birthdayId], references: [id])
  birthdayId  String?
  url         String
  description String
  suggestor   Contributor?  @relation(name: "giftSuggestor", fields: [authorId], references: [id])
  authorId    Int?
  upvotedBy   Contributor[] @relation("upvotedBy")
}

model Birthday {
  id           String        @default(uuid()) @id
  createdAt    DateTime      @default(now())
  date         DateTime?
  person       String
  gifts        Gift[]
  contributors Contributor[]
}
